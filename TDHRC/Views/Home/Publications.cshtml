@{
    ViewData["Title"] = "Publications";
}
@model List<Publications>

<main>
    <!--? Hero Start -->
    <div class="slider-area2" style="background-image: url('https://www-file.huawei.com/-/media/corp2020/media-center/image/transform/all-issues-cover/banner-all-issue-pc.jpg');">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                       
                        <div class="hero-cap hero-cap2 pt-70" >
                            <h2>Publications</h2>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                                    <li class="breadcrumb-item"><a asp-action="Publications">Publications</a></li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->
    <!-- Publications Section Start -->
    
    <!-- Publications Section End -->
    <!--? Blog Area Start-->
    <section class="blog_area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-5 mb-lg-0">
                    <div class="blog_left_sidebar">
                        @foreach (var blog in Model)
                        {
                            <article class="blog_item">
                                <div class="blog_item_img">
                                    <img class="card-img rounded-0" src="@blog.ImageUrl" alt="" style="width: 300px; height: 400px;">
                                </div>
                                <div class="blog_details">
                                    <a class="d-inline-block" href="~/Home/PublicationDetails/@blog.Id">
                                        <h2 class="blog-head" style="color: #2d2d2d;">@blog.Title</h2>
                                    </a>

                                    <ul class="blog-info-link">
                                        

                                    </ul>
                                </div>
                            </article>
                        }


                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- Blog Area End -->



