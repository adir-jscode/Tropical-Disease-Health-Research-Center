@{
}
@model List<Publications>

<main>
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70">
                            <h2>Publications</h2>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                                    <li class="breadcrumb-item"><a asp-action="Publications">Publications</a></li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->
    <!-- Publications Section Start -->
    <section class="publications-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                   
                    <div class="publication-list ">
                        @foreach (var publication in Model)
                        {
                            <div class="publication-item mt-4">
                                @* <h3>@publication.Title</h3>
                                <p><strong>Author:</strong> @publication.Author</p> *@
                                
                                @Html.Raw(publication.Content)
                                <a class="btn header-btn mt-4" href="@publication.JournalLink" target="_blank">Find Out More </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Publications Section End -->
    
</main>