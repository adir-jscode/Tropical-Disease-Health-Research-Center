@{
}
@model Publications
@{
    ViewData["Title"] = "Edit Publication";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="page-wrapper">
    <!-- Page Content-->
    <div class="page-content">

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="mt-0 header-title">Edit Publication</h4>

                            <div class="row">
                                <div class="col-lg-6">
                                    <form asp-action="Edit" method="post" novalidate>
                                        @* If your form needs to include a hidden field for the Publication ID, add it here *@
                                        <input type="hidden" asp-for="Id" />

                                        <div class="form-group row">
                                            <label asp-for="Title" for="example-text-input" class="col-sm-2 col-form-label text-right">Title</label>
                                            <div class="col-sm-10">
                                                <input asp-for="Title" class="form-control" type="text" name="title" id="example-text-input">
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-for="Content" for="example-text-input" class="col-sm-2 col-form-label text-right">Content</label>
                                            <div class="col-sm-10">
                                                <textarea asp-for="Content" id="tiny" name="content"></textarea>
                                                <span asp-validation-for="Content" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-for="ImageUrl" for="example-text-input" class="col-sm-2 col-form-label text-right">Image Url</label>
                                            <div class="col-sm-10">
                                                <input asp-for="ImageUrl" class="form-control" type="text" name="ImageUrl" id="example-text-input">
                                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label asp-for="JournalLink" for="example-text-input" class="col-sm-2 col-form-label text-right">Link</label>
                                            <div class="col-sm-10">
                                                <input asp-for="JournalLink" class="form-control" type="text" name="journallink" id="example-text-input">
                                                <span asp-validation-for="JournalLink" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-sm-10 offset-sm-2">
                                                <button asp-action="EditPublication" type="submit" class="btn btn-primary">Update</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </div><!--end col-->
            </div><!--end row-->
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
