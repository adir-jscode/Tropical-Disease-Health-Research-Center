@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="page-wrapper">
    <!-- Page Content-->
    <div class="page-content">

        <div class="container-fluid">
            

            

            <div class="row mt-2">
              
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mt-0 mb-3">Publications</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Id</th>
                                            <th>Title</th>
                                            
                                            <th>Action</th>
                                        </tr><!--end tr-->
                                    </thead>

                                    <tbody>
                                        @foreach(var publication in  ViewBag.Publications)
                                        {
                                            <tr>
                                                
                                                <td>@publication.Id</td>
                                                <td>@publication.Title</td>
                                                
                                                <td>
                                                    <a asp-route-Id="@publication.Id" asp-action="EditPublication" class="mr-2"><i class="fas fa-edit text-info font-16"></i></a>
                                                    <a asp-route-Id="@publication.Id" asp-action="DeletePublication"><i class="fas fa-trash-alt text-danger font-16"></i></a>
                                                </td>
                                            </tr>

                                            <!--end tr-->
                                        }
                                        
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </div><!--end col-->
            </div><!--end row-->

            <div class="row mt-2">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mt-0 mb-3">Blogs</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Id</th>
                                            <th>Author</th>
                                            <th>Title</th>
                                           
                                            
                                            <th>Action</th>
                                        </tr><!--end tr-->
                                    </thead>

                                    <tbody>
                                        @foreach (var blog in ViewBag.Blogs)
                                        {
                                            <tr>
                                                <td>@blog.Id</td>
                                                <td>@blog.Author</td>
                                                <td>@blog.Title</td>

                                                
                                                <td>
                                                    <a asp-route-id="@blog.Id" asp-action="EditBlog" class="mr-2"><i class="fas fa-edit text-info font-16"></i></a>
                                                    <a asp-route-id="@blog.Id" asp-action="DeleteBlog"><i class="fas fa-trash-alt text-danger font-16"></i></a>
                                                </td>
                                            </tr>

                                            <!--end tr-->
                                        }
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </div><!--end col-->
            </div><!--end row-->

        </div><!-- container -->

       
    </div>
    <!-- end page content -->
</div>
<!-- end page-wrapper -->